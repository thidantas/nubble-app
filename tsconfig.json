{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@hooks": ["src/hooks"],
      "@routes": ["src/routes"],
      "@screens": ["src/screens"],
      "@theme": ["src/theme"]
    },
    "ignoreDeprecations": "6.0"
  }
}
